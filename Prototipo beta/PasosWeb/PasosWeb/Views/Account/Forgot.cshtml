
@{
    ViewBag.Title = "Forgot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PaginaWeb.Models.User
@{
    ViewBag.Title = "Forgot";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" lang="es-mx">
    <link rel="icon" type="image/png" href="~/Resources/logorevisat.png">
    <title>@ViewBag.Title - RAD</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/fonts/Fonts.css")
    @Styles.Render("~/Content/Customize/SoltumVariables.css")
    @*@Styles.Render("~/Content/bundle")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
    @*@Scripts.Render("~/Scripts/bundle")*@
    @Styles.Render("~/Content/Customize/Login.css")
</head>
<body>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")*@
    <div class="container">
        <div class="login-container">
            <div class="brand-login-container">
                <div class="brand_container">
                    @*<img src="~/Images/RAD.png" id="logoLoginIndex" class="brand_logo" alt="Logo" />*@
                    <h4>Ingrese Correo para Enviar sus Datos</h4>
                </div>
            </div>
            <div class="form_container">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <form id="frmLogin">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label container-control-Login" })
                            <div class="container-control-Login">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Correo Electronico" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="container-control-Login">
                                <input type="submit" value="Enviar" class="btn btn-login" />
                            </div>
                        </div>
                        <label class="control-label container-control-Login text-danger">@Html.ValueFor(m => m.Message)</label>

                    </form>
                }
            </div>
        </div>
    </div>
    <div class="footer">

        <footer>
            <div>&copy; @DateTime.Now.Year - Soltum Tecnología SA de CV. Todos los derechos reservados.</div>
        </footer>
    </div>
</body>
</html>

